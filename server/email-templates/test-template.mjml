<mjml>
  <mj-head>
    <mj-title>Test Email from SmartDispute.ai</mj-title>
    <mj-attributes>
      <mj-all font-family="Arial, sans-serif" />
      <mj-text color="#555" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#f5f5f5">
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-image src="https://via.placeholder.com/200x50?text=SmartDispute.ai" alt="SmartDispute.ai" align="center" />
        
        <mj-text font-size="20px" color="#333" align="center" font-weight="bold" padding-top="20px">
          Test Email
        </mj-text>
        
        <mj-text font-size="16px" line-height="24px" padding-top="10px">
          Hello {{name}},
        </mj-text>
        
        <mj-text font-size="16px" line-height="24px">
          This is a test email from SmartDispute.ai's email notification system using MJML templates. 
          If you're receiving this email with proper formatting, the system is working correctly!
        </mj-text>
        
        <mj-section background-color="#f9f9f9" border-radius="5px" padding="10px">
          <mj-column>
            <mj-text font-size="16px" line-height="24px">
              <strong>Test Details:</strong><br />
              - Date: {{date}}<br />
              - Test ID: {{testId}}
            </mj-text>
          </mj-column>
        </mj-section>
        
        <mj-button background-color="#4f46e5" color="white" font-size="16px" padding="15px 30px" border-radius="4px" href="{{buttonUrl}}">
          Visit Dashboard
        </mj-button>
        
        <mj-text font-size="14px" line-height="20px" color="#888" padding-top="20px">
          This is an automated test email. Please do not reply to this message.
        </mj-text>
      </mj-column>
    </mj-section>
    
    <mj-section padding="10px">
      <mj-column>
        <mj-text align="center" font-size="12px" color="#888">
          &copy; {{year}} SmartDispute.ai. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
